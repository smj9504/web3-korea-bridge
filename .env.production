# Web3-Korea Bridge - Production Environment Variables
# DO NOT COMMIT ACTUAL SECRETS - This is a template file

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://web3korea.com
NEXTAUTH_URL=https://web3korea.com

# Database (PlanetScale Production)
DATABASE_URL="mysql://username:password@host.connect.psdb.cloud/web3korea?sslaccept=strict"

# Authentication
NEXTAUTH_SECRET="your_ultra_secure_jwt_secret_32_characters_minimum_length"

# Email Service (Resend)
RESEND_API_KEY="re_your_production_api_key"
FROM_EMAIL="contact@web3korea.com"

# File Upload (UploadThing)
UPLOADTHING_SECRET="sk_live_your_production_secret_key"
UPLOADTHING_APP_ID="your_production_app_id"

# reCAPTCHA v3
NEXT_PUBLIC_RECAPTCHA_SITE_KEY="6L_your_production_site_key"
RECAPTCHA_SECRET_KEY="6L_your_production_secret_key"

# Analytics & Monitoring
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
VERCEL_ANALYTICS_ID="your_vercel_analytics_id"
SENTRY_DSN="https://your_sentry_dsn@sentry.io/project_id"

# Security
ENCRYPTION_KEY="your_32_byte_encryption_key_for_sensitive_data"

# Monitoring & Alerting
UPTIME_ROBOT_API_KEY="ur_your_api_key"
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"
NOTIFICATION_EMAIL="admin@web3korea.com"

# Backup (AWS S3)
AWS_ACCESS_KEY_ID="AKIAXXXXXXXXXXXXXXXX"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
AWS_REGION="ap-northeast-2"
BACKUP_BUCKET="web3korea-backups"